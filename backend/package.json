{
	"name": "backend",
	"version": "1.0.0",
	"description": "Backend for the bank application",
	"main": "index.js",
	"scripts": {
		"start": "node server.js",
		"dev": "nodemon server.js",
		"build": "esbuild server.js --bundle --minify --sourcemap --platform=node --outfile=dist/bundle.js",
		"serverless-build:staging": "npm run serverless-prebuild && sls package --stage staging --verbose",
		"serverless-build:production": "npm run serverless-prebuild && sls package --stage production --verbose"
	},
	"author": "adenijijoseph4@gmail.com",
	"license": "MIT",
	"dependencies": {
		"@codegenie/serverless-express": "^4.14.1",
		"bcryptjs": "^2.4.3",
		"config": "^3.3.11",
		"cors": "^2.8.5",
		"dotenv": "^16.4.5",
		"express": "^4.19.2",
		"express-validator": "^7.1.0",
		"joi": "^17.13.3",
		"jsonwebtoken": "^9.0.2",
		"mongodb": "^6.7.0",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1"
	},
	"devDependencies": {
		"esbuild": "^0.21.5",
		"nodemon": "^3.1.3"
	}
}